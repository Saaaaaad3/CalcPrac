@model Practice.Calculator.Web.Models.CalculateRequestViewModel

<h2 class="my-4 text-center">Tax Calculator</h2>

<form asp-controller="Calculator" asp-action="Calculate" method="post" class="container">
    <div class="mb-3">
        <label for="PostalCode" class="form-label">Postal Code</label>
        <input type="text" id="PostalCode" name="PostalCode" class="form-control" required />
    </div>
    <div class="mb-3">
        <label for="Income" class="form-label">Income</label>
        <input type="number" id="Income" name="Income" class="form-control" min="0" step="0.01" required />
    </div>
    <div class="text-center">
        <button class="btn btn-success" type="submit">Calculate Tax</button>
    </div>
</form>

<div class="mt-4 text-center">
    @if (ViewData["TaxResult"] != null)
    {
        <p class="alert alert-info"> @ViewData["TaxResult"]</p>
        <p class="alert alert-info">Calculator Type: @ViewData["CalculatorType"]</p>
    }
</div>
